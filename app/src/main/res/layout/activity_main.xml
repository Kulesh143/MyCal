<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="22"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_result"
        android:textSize="32sp"
        android:layout_weight="6"
        android:gravity="bottom|end"
        android:paddingRight="32sp"
        android:paddingBottom="32sp"
        android:background="#EBE6E6"
         />
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="4"
    android:layout_weight="4"
    android:layout_height="wrap_content">
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="1"
        android:onClick="numberOperations"
        android:id="@+id/btn_1"
        android:textStyle="bold"
        android:layout_margin="1dp"
        android:textSize="25sp"
        android:backgroundTint="#228822"
        android:layout_height="match_parent"/>
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="2"
        android:onClick="numberOperations"
        android:id="@+id/btn_2"
        android:textStyle="bold"
        android:layout_margin="1dp"
        android:textSize="25sp"
        android:backgroundTint="#228822"
        android:layout_height="match_parent"/>
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="3"
        android:onClick="numberOperations"
        android:id="@+id/btn_3"
        android:textStyle="bold"
        android:layout_margin="1dp"
        android:textSize="25sp"
        android:backgroundTint="#228822"
        android:layout_height="match_parent"/>
    <Button
        android:layout_width="0dp"
        android:layout_weight="1"
        android:text="/"
        android:id="@+id/btn_division"
        android:textStyle="bold"
        android:layout_margin="1dp"
        android:textSize="25sp"
        android:layout_height="match_parent"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:onClick="numberOperations"
        android:layout_weight="4"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="4"
            android:id="@+id/btn_4"
            android:textStyle="bold"
            android:onClick="numberOperations"
            android:layout_margin="1dp"
            android:textSize="25sp"
            android:backgroundTint="#228822"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="5"
            android:onClick="numberOperations"
            android:id="@+id/btn_5"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textSize="25sp"
            android:backgroundTint="#228822"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="6"
            android:onClick="numberOperations"
            android:id="@+id/btn_6"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textSize="25sp"
            android:backgroundTint="#228822"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="+"
            android:id="@+id/btn_plus"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textSize="25sp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_weight="4"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="7"
            android:onClick="numberOperations"
            android:id="@+id/btn_7"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textSize="25sp"
            android:backgroundTint="#228822"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="8"
            android:onClick="numberOperations"
            android:id="@+id/btn_8"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textSize="25sp"
            android:backgroundTint="#228822"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="9"
            android:onClick="numberOperations"
            android:id="@+id/btn_9"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textSize="25sp"
            android:backgroundTint="#228822"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="-"
            android:id="@+id/btn_minus"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textSize="25sp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_weight="4"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="CLR"
            android:id="@+id/btn_clear"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textSize="25sp"
            android:backgroundTint="#228822"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="="
            android:id="@+id/btn_equal"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textSize="25sp"
            android:backgroundTint="#228822"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="0"
            android:onClick="numberOperations"
            android:id="@+id/btn_0"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textSize="25sp"
            android:backgroundTint="#228822"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="*"
            android:id="@+id/btn_multiply"
            android:textStyle="bold"
            android:layout_margin="1dp"
            android:textSize="25sp"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>